<% if @product.present? %>
  <% if @product.errors.any? %>
    <% @product.errors.full_messages.each do |message| %>
      <div class="alert alert-danger alert-dismissible margin-alert" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<% if notice = notice || flash[:notice] %>
  <div class="alert alert-success alert-dismissible margin-alert" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <%= notice %>
  </div>
<% end %>
